{
  "suite_name": "olmo_conformity_small",
  "suite_version": "v2",
  "description": "Small sanity-check suite (minimal datasets + a few conditions) using wrong_answer-enabled items for scientifically valid pressure prompts. Includes one Zhu et al. (arXiv:2410.12428)-style Asch and one authority-claim condition for quick checks.",
  "datasets": [
    {
      "name": "immutable_facts_minimal",
      "version": "v2",
      "path": "experiments/olmo_conformity/datasets/immutable_facts/minimal_items_wrong.jsonl"
    },
    {
      "name": "social_conventions_minimal",
      "version": "v2",
      "path": "experiments/olmo_conformity/datasets/social_conventions/minimal_items_wrong.jsonl"
    }
  ],
  "conditions": [
    { "name": "control", "params": { "type": "control" } },
    { "name": "asch_history_5", "params": { "type": "synthetic_asch_history", "confederates": 5, "confidence": "high" } },
    { "name": "asch_zhu_unbiased_unanimous_plain", "params": { "type": "asch_peer_pressure", "system_style": "control", "prompt_style": "conversation", "confederates": 5, "consensus": "unanimous", "tone": "plain" } },
    { "name": "authoritative_bias", "params": { "type": "authoritative_bias", "user_claim_strength": "high" } },
    { "name": "authority_zhu_unbiased_trust", "params": { "type": "authority_claim", "system_style": "control", "claim_style": "trust" } },
    { "name": "truth_probe_capture", "params": { "type": "probe_capture", "dataset": "truth_probe_train" } },
    { "name": "social_probe_capture", "params": { "type": "probe_capture", "dataset": "social_probe_train" } }
  ],
  "models": [
    { "variant": "base", "model_id": "allenai/Olmo-3-1025-7B" },
    { "variant": "instruct", "model_id": "allenai/Olmo-3-7B-Instruct" },
    { "variant": "instruct_sft", "model_id": "allenai/Olmo-3-7B-Instruct-SFT" },
    { "variant": "instruct_dpo", "model_id": "allenai/Olmo-3-7B-Instruct-DPO" },
    { "variant": "think", "model_id": "allenai/Olmo-3-7B-Think" },
    { "variant": "think_sft", "model_id": "allenai/Olmo-3-7B-Think-SFT" },
    { "variant": "think_dpo", "model_id": "allenai/Olmo-3-7B-Think-DPO" },
    { "variant": "rl_zero", "model_id": "allenai/Olmo-3-7B-RL-Zero-Math" }
  ],
  "run": {
    "seed": 42,
    "temperature": 0.0,
    "top_k": 50,
    "top_p": 0.9,
    "max_items_per_dataset": 200,
    "notes": "Sampling defaults: top_k=50, top_p=0.9 (locked); temperature varies across suite configs"
  }
}
